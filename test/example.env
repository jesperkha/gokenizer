# Basic configuration
APP_NAME=MySuperApp # Name of the application
APP_ENV=production # Environment type
APP_DEBUG=false # Enable debug mode (true/false)
APP_URL=https://mysuperapp.example.com # Base URL of the app

# Database settings
DB_CONNECTION=mysql # Type of database connection
DB_HOST=127.0.0.1 # Database host IP
DB_PORT=3306 # Database port
DB_DATABASE=superapp_db # Name of the database
DB_USERNAME=superapp_user # Database username
DB_PASSWORD=superapp_pass_123 # Database password

# Redis settings
REDIS_HOST=127.0.0.1 # Redis host IP
REDIS_PORT=6379 # Redis port number
REDIS_PASSWORD=null # Redis password (null if no password)

# Mail settings
MAIL_DRIVER=smtp # Mail driver to use
MAIL_HOST=smtp.mailtrap.io # SMTP host
MAIL_PORT=2525 # SMTP port
MAIL_USERNAME=null # Mail username (null if not set)
MAIL_PASSWORD=null # Mail password (null if not set)
MAIL_ENCRYPTION=tls # Encryption protocol (e.g., tls, ssl)

# Third-party services
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE # AWS access key
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY # AWS secret access key
AWS_REGION=us-east-1 # AWS region for services
AWS_BUCKET=my-superapp-bucket # AWS S3 bucket name

# OAuth credentials
GOOGLE_CLIENT_ID=1234567890-abcdefghijklmnopqrstuvwxyz.apps.googleusercontent.com # Google OAuth client ID
GOOGLE_CLIENT_SECRET=XYZ_ABC1234567890_abcdefghijklmnopqrstuv # Google OAuth client secret

FACEBOOK_APP_ID=123456789012345 # Facebook app ID
FACEBOOK_APP_SECRET=abcdef1234567890abcdef1234567890 # Facebook app secret

# Feature toggles
FEATURE_LOGIN_V2=true # Enable new login version
FEATURE_ENABLE_PAYMENTS=false # Enable payment features
FEATURE_BETA_USERS=1000 # Max number of beta users

# Miscellaneous settings
API_RATE_LIMIT=5000 # API rate limit per hour
MAX_UPLOAD_SIZE=52428800 # Max upload size in bytes
SESSION_TIMEOUT=3600 # Session timeout in seconds
ENABLE_ANALYTICS=true # Enable analytics tracking (true/false)

# Security settings
JWT_SECRET=supersecretjwtkey # Secret key for JWT
PASSWORD_SALT=saltySalt_123 # Salt for password hashing

# Logging settings
LOG_LEVEL=debug # Log level (debug, info, warn, error)
LOG_TO_FILE=true # Log to file (true/false)
LOG_FILE_PATH=/var/log/my_superapp.log # Path to the log file

# Array-like configurations
ALLOWED_HOSTS=localhost,example.com,superapp.example.com # List of allowed hosts
SUPPORTED_LANGUAGES=en,es,fr,de # Supported languages
COUNTRY_CODES=US,CA,MX,BR,DE,FR,IT,ES,GB,JP,AU,IN,KR # Allowed country codes

# Nested or grouped configuration-like variables
CACHE_REDIS_HOST=127.0.0.1 # Cache Redis host
CACHE_REDIS_PORT=6380 # Cache Redis port
CACHE_REDIS_DB=1 # Cache Redis database index

SESSION_REDIS_HOST=127.0.0.1 # Session Redis host
SESSION_REDIS_PORT=6381 # Session Redis port
SESSION_REDIS_DB=2 # Session Redis database index

# Additional complex variables
DATABASE_URL=mysql://superapp_user:superapp_pass_123@127.0.0.1:3306/superapp_db # Full database URL
REDIS_URL=redis://127.0.0.1:6379/0 # Full Redis URL

# Extended boolean, integer, and string fields
ENABLE_BACKGROUND_JOBS=true # Enable background job processing
MAX_RETRIES=5 # Maximum retry attempts
DEBUG_MODE="verbose" # Debug mode description
FALLBACK_LANGUAGE=en # Default fallback language

# Extended string lengths and special characters
LONG_SECRET_KEY=abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890!@#$%^&*()-_=+[]{}|;:,.<>?/~` # Long secret key
VERY_LONG_STRING="This is a very long string intended for testing the parsing of lengthy configuration values, including commas, spaces, and other special characters." # Example of a long string with special chars

# Test configuration for multi-line strings
MULTI_LINE_TEXT="Line 1: Hello, World!\nLine 2: This is a test.\nLine 3: Multi-line configurations can be tricky!" # Multi-line text string
SINGLE_LINE_WITH_QUOTES="Example 'text' with quotes" # Single line with embedded quotes
